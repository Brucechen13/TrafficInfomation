<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
  <LinearLayout 
            
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
          android:layout_marginTop="15dip"      
        android:background="@drawable/usermainpage_bg_center" 
        android:orientation="vertical"  
            >
          
      <RelativeLayout
          android:id="@+id/mine_tongzhi"
          android:layout_width="fill_parent"
          android:layout_height="42dip"
          android:clickable="true" >

                    <ImageView
                        android:id="@+id/mine_tongzhi_img"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/chat_addition_activity_nor"
                        android:scaleType="fitXY" />

           <TextView
               android:id="@+id/tongzhi_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dip"
               android:layout_toRightOf="@id/mine_tongzhi_img"
               android:text="接受推送通知"
               android:textColor="#202020"
               android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/tuisong_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:checked="true"
                        android:scaleType="matrix" />

                </RelativeLayout>
                
      <View 
                     android:layout_width="fill_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"
                    />
      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="42dip"
          android:clickable="true" >

                    <ImageView
                        android:id="@+id/mine_scgj_img"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/ic_profile_normal"
                        android:scaleType="fitXY" />

           <TextView
               android:id="@+id/scgj_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dip"
               android:layout_toRightOf="@id/mine_scgj_img"
               android:text="保存个人账号"
               android:textColor="#202020"
               android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/zhanghao_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:checked="true"
                        android:scaleType="matrix" />

                </RelativeLayout>
            
            <View 
                     android:layout_width="fill_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"
                    />    
     <RelativeLayout
         android:id="@+id/mime_about"
         android:layout_width="fill_parent"
         android:layout_height="42dip"
         android:background="@drawable/usermainpage_bg_center"
         android:clickable="true" >

          <ImageView
              android:id="@+id/mime_about_img"
              android:layout_width="36.0dip"
              android:layout_height="36.0dip"
              android:layout_centerVertical="true"
              android:layout_marginLeft="10dip"
              android:background="@drawable/ic_mine_setting"
              android:scaleType="fitXY" />

           <TextView
               android:id="@+id/about_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dip"
               android:layout_toRightOf="@id/mime_about_img"
               android:text="关于"
               android:textColor="#202020"
               android:textSize="16sp" />

          <ImageView
              android:id="@+id/row_about_img"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="10dip"
              android:scaleType="matrix"
              android:src="@drawable/mm_submenu" />

          </RelativeLayout>
    
    
    
   
       
</LinearLayout>

  <LinearLayout
            android:id="@+id/layout_TABLE2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/table_margin"
            android:background="@color/table_background"
            android:padding="@dimen/table_padding" >

            <Button
                android:id="@+id/exit"
                style="@style/text_black_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/row_selector"
                android:gravity="center_vertical|center"
                android:text="@string/text_exit" />
        </LinearLayout>
    
    
   
</LinearLayout>
